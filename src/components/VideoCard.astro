---
const { videoNameOnCDN, altText, dataSpeed } = Astro.props;
---

<style>
  .videoCard {
    height: 600px;
    overflow: hidden;
  }
  .videoCard video {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Makes sure the video scales properly without stretching */
    border-radius: inherit; /* Inherit the card's rounded corners */
  }
</style>
<div
  class="card videoCard radius-50 border-0 parallaxItem"
  data-speed=`${dataSpeed}`
>
  <video
    preload="none"
    autoplay
    muted
    loop
    style="width:100%;height:100%"
    aria-hidden="true"
  >
    <source
      src={`https://res.cloudinary.com/dvbmnr7qn/video/upload/f_webm/q_auto:good/c_crop,h_600,w_516/v1728062767/${videoNameOnCDN}`}
      type="video/webm"
    />
  </video>
  <source
    src={`https://res.cloudinary.com/dvbmnr7qn/video/upload/f_mp4/q_auto:good/c_crop,h_600,w_516/v1728062767/${videoNameOnCDN}`}
    type="video/mp4"
  />
</div>

<!-- Screen reader only text for description -->
<span class="visually-hidden">
  {altText}
</span>
