---
const { imageNameOnCDN, altText } = Astro.props;
---

<style>
  .masonry-item {
    width: 50%;
  }

  @media (min-width: 768px) {
    .masonry-item {
      width: 33.333333333%;
    }
  }

  @media (min-width: 1200px) {
    .masonry-item {
      width: 25%;
    }
  }
</style>

<img
  src={`https://ik.imagekit.io/oxlcbgl8dg/${imageNameOnCDN}/tr:q-70,w-480,f-auto`}
  srcset={`https://ik.imagekit.io/oxlcbgl8dg/${imageNameOnCDN}/tr:q-70,w-400,f-auto 400w, 
           https://ik.imagekit.io/oxlcbgl8dg/${imageNameOnCDN}/tr:q-70,w-480,f-auto 480w`}
  sizes="(max-width: 767.99px) 50vw, (min-width: 768px) and (max-width: 1199.9999px) 33.333333vw, (min-width:1200px) 25vw"
  class="masonry-item"
  loading="lazy"
  alt=`${altText}`
/>
